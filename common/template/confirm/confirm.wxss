.confirm-packing{
  position: fixed;
  top:0;
  left: 0;
  z-index: 2;

  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:100%;
}

.confirm-window{
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  width: 530rpx;
  min-height: 340rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: -100rpx;
  overflow: hidden;
}

.confirm-window > .title{
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  color: #fff;
  background-color: #74b8d2;
}
.confirm-window > .content{
  padding:0 35rpx;
  margin:40rpx 0;
}

.confirm-window > .footer{
  display: flex;
  justify-content: space-between;

  height:80rpx;
  line-height: 80rpx;
}

.confirm-window > .footer view{
  text-align: center;
  flex: 1;
}

.confirm-window > .footer .false{
  border-top: 1rpx solid #e5e5e5;
}

.confirm-window > .footer .true{
  background-color: #a5c641;
  color: #fff;
}

/*== 确认支付框
===============================*/

.confirm-window > .content-payment{
  margin: 10rpx 0;
}

.confirm-window > .content-payment{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: -30rpx;
}
.confirm-window > .content-payment .msg-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  height: 80rpx;
  margin-left: 40rpx;
}
.confirm-window > .content-payment .msg-box text:first-child{
  font-size: 34rpx;
  line-height: 34rpx;
}
.confirm-window > .content-payment .msg-box text:last-child{
  font-size: 26rpx;
  line-height: 26rpx;
}
.confirm-window > .content-payment .iconfont{
  margin-top: -8rpx;
  font-size: 90rpx;
  color: #a5c641;
}


