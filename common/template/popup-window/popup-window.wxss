.popup_packing {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.popup_window {
  display: flex;
  flex-direction: column;
  width: 630rpx;
  min-height: 340rpx;
  background-color: #fff;
  border-radius: 28rpx;
  margin-top: -100rpx;
  overflow: hidden;
}

.popup_window__hd {
  position: relative;
  height: 138rpx;
  text-align: center;
  line-height: 128rpx;
  font-size: 40rpx;
}

.popup_window__hd .title {
  position: relative;
  top: -10rpx;
  z-index: 1;
  color: #fff;
}

