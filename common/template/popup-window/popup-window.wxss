.popup_window__hd image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100.5%;
  height: 100%;
}

.popup_window__bd {
  padding: 70rpx 25rpx 0;
  font-size: 32rpx;
  text-align: center;
}

.popup_window__bd.more {
  text-align: justify;
}

.popup_window__bd text {
  text-align: justify;
  line-height: 55rpx;
}

.popup_window__ft {
  display: flex;
  padding: 60rpx 50rpx 40rpx;
}

.popup_window__ft--confirm {
  justify-content: space-between;
}

.popup_window__ft--tips {
  justify-content: center;
}

.popup_window__ft > .empty {
  border: 1rpx solid #45a5dd;
  color: #0080c0;
}

.popup_window__ft > .solid {
  background-color: #45a5dd;
  color: #fff;
}

/*== 询问框按钮样式
============================= */

.popup_window__ft >.btn-confirm {
  padding: 10rpx 55rpx;
  border-radius: 8rpx;
}

.popup_window__ft >.btn-confirm--lg {
  padding: 10rpx 35rpx;
  border-radius: 8rpx;
}

/*== 提示框按钮样式
============================= */

.tips-btn--confirm {
  padding: 15rpx 100rpx;
  border-radius: 8rpx;
}

/*== 商品列表框按钮样式
============================= */

.shop-btn--confirm {
  padding: 10rpx 75rpx;
  border-radius: 8rpx;
}

